---
import Entradas from "../components/Entradas.astro";
import MiLayout from "./MiLayout.astro";
const {frontmatter} = Astro.props
---
<MiLayout title={frontmatter?.title || 'default' }>
  <section  class="text-zinc-800 dark:text-zinc-200">
    <h1 class="text-red-500 text-4xl capitalize">{frontmatter.title}</h1>
    <small class="text-zinc-400">{frontmatter.date}</small>
    <div class="min-h-[70vh]">
      <slot />
    </div>
    <Entradas title="Todas las entradas"/>
    <a href="/">Ir a Home</a>
  </section>
</MiLayout>
<style is:inline>
  h1{
    font-size: 2rem;
  }
  h2{
    font-size: 1.5rem;
  }
  h3{
    font-size: 1rem;
  }
</style>